.container
  .row
    .col-md-3
      %h2 User info
      = render 'users/info', user: @book.user
      %h2.mt-3 New book
      = render 'form', book: Book.new
    .col-md-8.offset-md-1
      %h2 Book detail
      %table.table
        %tr{:id => "book_#{@book.id}"}
          %td
            = link_to user_path(@book.user) do
              = attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg")
              %br/
              = @book.user.name
          %td= link_to @book.title, book_path(@book)
          %td= @book.body
          %td.favorite-btn= render "favorites/favorite-btn", book: @book
          %td.comments-count
            コメント数: #{@book.book_comments.count}
          - if @book.user == current_user
            %td= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}"
            %td= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"
      %table.book_comments
        = render 'book_comments/index', book: @book
      = form_with model:[@book,@book_comment] do |f|
        = f.text_area :comment, size:"90x5"
        = f.submit '送信'
